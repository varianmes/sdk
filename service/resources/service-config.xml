    <service name="ValidateReworkStatus" parent="ExtensionConfigurator" template="false">
        <property name="serviceReference" service-ref="NCProductionService"/>
        <property name="methodName" value="createNC"/>
        <property name="extensionClass" value="com.varian.nonconformance.service.plugin.ValidateReworkStatusExtensionActivity"/>
        <property name="activityType" value="PRE"/>
        <property name="executionOrder" value="100"/>
    </service>

    <service name="UpdateReworkStatus" parent="ExtensionConfigurator" template="false">
        <property name="serviceReference" service-ref="NCProductionService"/>
        <property name="methodName" value="updateNCStatus"/>
        <property name="extensionClass" value="com.varian.nonconformance.service.plugin.UpdateReworkStatusExtensionActivity"/>
        <property name="activityType" value="PRE"/>
        <property name="executionOrder" value="100"/>
    </service>

 
</service-config>
